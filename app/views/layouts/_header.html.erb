<header class="navbar navbar-fixed-top navbar-inverse" id="header">
  <div class="container wrapper">

    <!-- Logo -->
    <%= link_to "Job Request System", root_path, id: "logo" %>
    <nav>
      
      <ul class="nav navbar-nav navbar-right ">
        <% if logged_in? %>     
          
          <!-- user login sign -->
          <li class="navbar-text">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 
            <%= current_user.name.titleize %>
          </li>        

          <!-- homepage icon -->         
          <li id='home-btn'>
            <%= link_to active_jobs_path do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Job Board     
            <% end %>        
          </li>               

          <!-- Jobs -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Jobs <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Create New Job", new_job_path %></li>              
              <li><%= link_to "View Completed Jobs", completed_jobs_path %></li>              
            </ul>
          </li>

          <!-- admin login -->
          <% if current_user.admin? %> 

            <!-- users -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Users <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Register New User", new_user_path %></li>
                <li><%= link_to "View All Users", users_path %></li>              
              </ul>
            </li>           

            <!-- Rigs -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Rigs <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Register New Rig", new_rig_path %></li>  
                <li><%= link_to "View All Rigs", rigs_path %></li>                    
              </ul>
            </li>            
           

          <!-- staff login -->
          <% else %>

            <!-- staff homepage, all jobs user involved -->
            <li><%= link_to "My Jobs", my_jobs_path %></li>  

            <!-- users -->
            <li><%= link_to "Users", users_path %></li>  

          <% end %>
         
          <!-- log-out -->
          <li>
            <%= link_to logout_path, method: "delete" do %>
              <span class="glyphicon glyphicon-off" aria-hidden="true"></span> Log Out
            <% end %>
          </li>   

        <!-- no logged in --> 
        <% else %>

          <!-- about page -->
          <li>
            <%= link_to 'About', about_path %>
          </li>

          <!-- contact page -->
          <li>
            <%= link_to 'Contact', contact_path %>           
          </li>      

          <!-- log-in -->  
          <li>
            <%= link_to root_path do %>
              <span class="glyphicon glyphicon-lock" aria-hidden="true"></span> Log In
            <% end %>          
          </li> 

        <% end %>
      </ul>
    </nav>
  </div>
</header>
