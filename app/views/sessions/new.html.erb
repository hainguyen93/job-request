<% provide(:title, "Home") %>

<h1>Welcome</h1>

<br />
<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3 ">
    <%= form_for(:session, url: login_path) do |f| %>  
      
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', required: true %>
          
      <br />      
      <%= f.label :password %>  
      <%= f.password_field :password, class: 'form-control', required: true %>  
            
      <br/>  
      <%= link_to "Forgot your password?", new_password_reset_path, class: 'col-md-8 col-sm-8 col-xs-12 forgot_pass' %>
      <%= f.submit "Log in", class: "btn col-md-4 col-sm-4 col-xs-12 btn-primary" %>
    <% end %>
    
  </div>
</div>
